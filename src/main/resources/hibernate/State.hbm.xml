<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.yoda.state.model.State" table="state">
		<comment></comment>
		<id name="stateId" type="long">
			<column name="state_id" />
			<generator class="increment" />
		</id>
		<property name="siteId" type="long">
			<column name="site_id" length="20" not-null="true">
				<comment />
			</column>
		</property>
		<property name="stateCode" type="string">
			<column name="state_code" length="2" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="stateName" type="string">
			<column name="state_name" length="40" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="recUpdateBy" type="string">
			<column name="rec_update_by" length="20" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="recUpdateDatetime" type="timestamp">
			<column name="rec_update_datetime" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="recCreateBy" type="string">
			<column name="rec_create_by" length="20" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="recCreateDatetime" type="timestamp">
			<column name="rec_create_datetime" not-null="true">
				<comment></comment>
			</column>
		</property>
		<!-- <set name="taxes" inverse="true" table="tax_state" order-by="tax_id">
			<key column="state_id" />
			<many-to-many column="tax_id" class="com.yoda.controlpanel.tax.model.Tax" />
		</set> -->
		<many-to-one name="country" class="com.yoda.country.model.Country" column="country_id" />
		<!-- <many-to-one name="shippingRegion" class="com.yoda.controlpanel.shipping.model.ShippingRegion" column="shipping_region_id" /> -->
	</class>
</hibernate-mapping>
