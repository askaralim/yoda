<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.yoda.content.model.Content" table="content" lazy="false">
		<comment></comment>
		<id name="contentId" type="long">
			<column name="content_id" />
			<generator class="increment" />
		</id>
		<property name="siteId" type="long">
			<column name="site_id" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="naturalKey" type="string" unique="true" index="natural_key">
			<column name="natural_key" length="255" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="title" type="string">
			<column name="title" length="128" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="shortDescription" type="text">
			<column name="short_description" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="description" type="text">
			<column name="description" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="pageTitle" type="string">
			<column name="page_title" length="255" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="featuredImage" type="string">
			<column name="featured_image" length="255">
				<comment></comment>
			</column>
		</property>
		<property name="hitCounter" type="long">
			<column name="hit_counter" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="score" type="long">
			<column name="score" not-null="true">
			</column>
		</property>
		<property name="publishDate" type="date">
			<column name="publish_date" length="10" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="expireDate" type="date">
			<column name="expire_date" length="10" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="published" type="boolean">
			<column name="published">
			</column>
		</property>
		<property name="updateBy" type="long">
			<column name="update_by" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="updateDate" type="timestamp">
			<column name="update_date" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="createBy" type="long">
			<column name="create_by" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="createDate" type="timestamp">
			<column name="create_date" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="sectionId" type="long" update="false" insert="false">
			<column name="section_id" not-null="false">
				<comment />
			</column>
		</property>
		<many-to-one name="section" column="section_id" class="com.yoda.section.model.Section" />
		<!-- <many-to-one name="image" class="com.yoda.content.model.ContentImage" column="image_id" unique="true" /> -->
		<set name="menus" inverse="true" order-by="menu_id" lazy="false">
			<key column="content_id" />
			<one-to-many class="com.yoda.menu.model.Menu" />
		</set>
		<set name="items" inverse="true" order-by="price" cascade="all" lazy="false">
			<key column="content_id"/>
			<one-to-many class="com.yoda.item.model.Item"/>
		</set>
		<!-- <set name="images" inverse="true" order-by="image_id" lazy="false">
			<key column="content_id" />
			<one-to-many class="com.yoda.controlpanel.content.model.ContentImage" />
		</set> -->
	</class>
</hibernate-mapping>