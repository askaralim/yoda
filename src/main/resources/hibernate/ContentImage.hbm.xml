<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.yoda.content.model.ContentImage" table="content_image" lazy="false">
		<comment></comment>
		<id name="imageId" type="long">
			<column name="image_id" />
			<generator class="increment" />
		</id>
		<property name="siteId" type="long">
			<column name="site_id" length="20" not-null="true">
				<comment />
			</column>
		</property>
		<property name="seqNum" type="int">
			<column name="seq_num" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="contentType" type="string">
			<column name="content_type" length="20" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="imageName" type="string">
			<column name="image_name" length="40" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="imageValue" type="binary" lazy="true">
			<column name="image_value" not-null="true" sql-type="longblob">
				<comment></comment>
			</column>
		</property>
		<property name="height" type="int">
			<column name="height" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="width" type="int">
			<column name="width" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="updateBy" type="long">
			<column name="update_by" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="updateDate" type="timestamp">
			<column name="update_date" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="createBy" type="long">
			<column name="create_by" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="createDate" type="timestamp">
			<column name="create_date" not-null="true">
				<comment></comment>
			</column>
		</property>
		<!-- <many-to-one name="content" column="content_id" class="com.yoda.controlpanel.content.model.Content" /> -->
	</class>
</hibernate-mapping>
