<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.yoda.section.model.Section" table="section" lazy="false">
		<comment />
		<id name="sectionId" type="long">
			<column name="section_id" />
			<generator class="increment" />
		</id>
		<property name="siteId" type="long">
			<column name="site_id" length="20" not-null="true">
				<comment />
			</column>
		</property>
		<property name="sectionNaturalKey" type="string" unique="true"
			index="section_natural_key">
			<column name="section_natural_key" length="255" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="sectionTitle" type="string">
			<column name="section_title" length="40" not-null="true">
				<comment />
			</column>
		</property>
		<property name="seqNum" type="int">
			<column name="seq_num" not-null="true">
				<comment />
			</column>
		</property>
		<property name="sectionParentId" type="long">
			<column name="section_parent_id" not-null="false">
				<comment />
			</column>
		</property>
		<property name="sectionShortTitle" type="string">
			<column name="section_short_title" length="20" not-null="true">
				<comment />
			</column>
		</property>
		<property name="sectionDesc" type="text">
			<column name="section_desc" not-null="true">
				<comment />
			</column>
		</property>
		<property name="published" type="char">
			<column name="published" length="1" not-null="true">
				<comment />
			</column>
		</property>
		<property name="recUpdateBy" type="long">
			<column name="rec_update_by" not-null="true">
				<comment />
			</column>
		</property>
		<property name="recUpdateDatetime" type="timestamp">
			<column name="rec_update_datetime" not-null="true">
				<comment />
			</column>
		</property>
		<property name="recCreateBy" type="long">
			<column name="rec_create_by" not-null="true">
				<comment />
			</column>
		</property>
		<property name="recCreateDatetime" type="timestamp">
			<column name="rec_create_datetime" not-null="true">
				<comment />
			</column>
		</property>
		<set name="menus" inverse="true" order-by="menu_id">
			<key column="section_id" />
			<one-to-many class="com.yoda.menu.model.Menu" />
		</set>
		<!-- <set name="items" table="item" inverse="true">
			<key column="section_id" />
			<one-to-many class="com.yoda.controlpanel.item.model.Item" />
		</set> -->
		<set name="contents" table="content" inverse="true">
			<key column="section_id" />
			<one-to-many class="com.yoda.content.model.Content" />
		</set>
	</class>
</hibernate-mapping>