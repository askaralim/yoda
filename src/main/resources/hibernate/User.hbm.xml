<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.yoda.user.model.User" table="user_">
		<comment></comment>
		<id name="userId" type="long">
			<column name="user_id" />
			<generator class="increment" />
		</id>
		<property name="username" type="string">
			<column name="username" length="50" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="password" type="string">
			<column name="password" length="50" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="addressLine1" type="string">
			<column name="address_line1" length="30" not-null="true">
				<comment />
			</column>
		</property>
		<property name="addressLine2" type="string">
			<column name="address_line2" length="30" not-null="true">
				<comment />
			</column>
		</property>
		<property name="cityName" type="string">
			<column name="city_name" length="25" not-null="true">
				<comment />
			</column>
		</property>
		<property name="enabled" type="boolean">
			<column name="enabled">
			</column>
		</property>
		<property name="stateName" type="string">
			<column name="state_name" length="40" not-null="true">
				<comment />
			</column>
		</property>
		<property name="countryName" type="string">
			<column name="country_name" length="40" not-null="true">
				<comment />
			</column>
		</property>
		<property name="zipCode" type="string">
			<column name="zip_code" length="10" not-null="true">
				<comment />
			</column>
		</property>
		<property name="email" type="string">
			<column name="email" length="50" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="phone" type="string">
			<column name="phone" length="20" not-null="false">
				<comment></comment>
			</column>
		</property>
		<property name="userType" type="string">
			<column name="user_type" length="1" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="lastLoginDate" type="timestamp">
			<column name="last_login_date" not-null="false">
				<comment />
			</column>
		</property>
		<property name="lastVisitSiteId" type="long">
			<column name="last_visit_site_id" length="20" not-null="false">
				<comment />
			</column>
		</property>
		<property name="active" type="java.lang.Character">
			<column name="active" length="1" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="updateBy" type="long">
			<column name="update_by" not-null="true">
				<comment />
			</column>
		</property>
		<property name="updateDate" type="timestamp">
			<column name="update_date" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="createBy" type="long">
			<column name="create_by" not-null="true">
				<comment />
			</column>
		</property>
		<property name="createDate" type="timestamp">
			<column name="create_date" not-null="true">
				<comment></comment>
			</column>
		</property>
		<!-- <set name="authorities" table="authority" inverse="true" lazy="true" fetch="select"> -->
		<!-- <set name="authorities" table="authority" inverse="false" lazy="false"> -->
		<set name="authorities" table="authority" inverse="true" lazy="false">
			<key column="user_id" />
			<one-to-many class="com.yoda.user.model.UserAuthority" />
		</set>
		<!-- <set name="images" inverse="true" order-by="image_id" lazy="false">
			<key column="content_id" />
			<one-to-many class="com.yoda.controlpanel.content.model.ContentImage" />
		</set> -->
		
		<set name="sites" inverse="false" table="user_site" order-by="site_id" lazy="false">
			<key column="user_id" />
			<many-to-many column="site_id" class="com.yoda.site.model.Site" />
		</set>
	</class>
</hibernate-mapping>