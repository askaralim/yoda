<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.yoda.template.model.Template" table="template">
		<comment></comment>
		<id name="templateId" type="java.lang.Long">
			<column name="template_id" />
			<generator class="increment" />
		</id>
		<property name="siteId" type="string">
			<column name="site_id" length="20" not-null="true">
				<comment />
			</column>
		</property>
		<property name="templateName" type="string">
			<column name="template_name" length="20" not-null="true">
				<comment />
			</column>
		</property>
		<property name="templateDesc" type="string">
			<column name="template_desc" length="40" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="recUpdateBy" type="string">
			<column name="rec_update_by" length="20" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="recUpdateDatetime" type="timestamp">
			<column name="rec_update_datetime" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="recCreateBy" type="string">
			<column name="rec_create_by" length="20" not-null="true">
				<comment></comment>
			</column>
		</property>
		<property name="recCreateDatetime" type="timestamp">
			<column name="rec_create_datetime" not-null="true">
				<comment></comment>
			</column>
		</property>
	</class>
</hibernate-mapping>